<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="#F2EEE5">

    <TextView
        android:id="@+id/noti_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:text="제목" />

    <EditText
        android:id="@+id/noti_title_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:inputType="textPersonName"
        android:layout_toRightOf="@+id/noti_title_label"
        android:layout_alignBaseline="@id/noti_title_label"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/noti_content_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noti_title_label"
       android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:text="내용" />

    <EditText
        android:id="@+id/noti_content_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:inputType="textPersonName"
        android:layout_toRightOf="@id/noti_content_label"
        android:layout_alignBaseline="@id/noti_content_label"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/noti_condition_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noti_content_label"
        android:layout_marginTop="30dp"
        android:text="터치시 명령 설정"
        android:layout_centerHorizontal="true"/>

    <RadioGroup
        android:id="@+id/noti_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noti_condition_label"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/noti_radio_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_none" />

        <RadioButton
            android:id="@+id/noti_radio_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_internet_browser" />

        <RadioButton
            android:id="@+id/noti_radio_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_apps"/>

        <RadioButton
            android:id="@+id/noti_radio_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_phone_call"/>

    </RadioGroup>

    <Button
        android:id="@+id/noti_button_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="연락처 선택"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:background="#F88C65"
        android:layout_below="@id/noti_radio_group"/>

    <EditText
        android:id="@+id/noti_text_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="URL 주소"
        android:inputType="textPersonName"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_below="@id/noti_radio_group"/>

    <Button
        android:id="@+id/noti_button_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="어플 선택"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:background="#F88C65"
        android:layout_below="@id/noti_radio_group"/>

    <Button
        android:id="@+id/noti_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="완료"
        android:layout_alignParentBottom="true"
        android:background="#FFC301"
        />
</RelativeLayout>